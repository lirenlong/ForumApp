<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/new_user_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_name"
                android:layout_marginTop="50dp"
                android:text="姓名: "
                android:textSize="22sp" />


            <EditText
                android:id="@+id/new_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_name_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_name_label"
                android:singleLine="true"
                android:text="name"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/new_user_gender_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_user_name_label"
                android:layout_marginTop="30dp"
                android:text="性别: "
                android:textSize="22sp" />


            <EditText
                android:id="@+id/new_user_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_gender_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_gender_label"
                android:singleLine="true"
                android:text="男"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_user_age_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/new_user_gender_label"
                android:layout_marginTop="30dp"
                android:text="年龄: "
                android:textSize="22sp" />

            <EditText
                android:id="@+id/new_user_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_age_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_age_label"
                android:singleLine="true"
                android:text="26"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_user_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_user_age_txt"
                android:layout_marginTop="30dp"
                android:text="论坛等级: "
                android:textSize="22sp" />

            <EditText
                android:id="@+id/new_user_level_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_level_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_level_label"
                android:singleLine="true"
                android:text="3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_user_coin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_user_level_label"
                android:layout_marginTop="30dp"
                android:text="论坛币: "
                android:textSize="22sp" />

            <EditText
                android:id="@+id/new_user_coin_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_coin_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_coin_label"
                android:singleLine="true"
                android:text="3589"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_user_intro_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_user_coin_label"
                android:layout_marginTop="30dp"
                android:text="个性签名: "
                android:textSize="22sp" />

            <EditText
                android:id="@+id/new_user_intro_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_user_intro_label"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/new_user_intro_label"
                android:text="3589358"
                android:textSize="20sp" />

            <Button
                android:id="@+id/new_user_button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_user_intro_txt"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="确认添加" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>
